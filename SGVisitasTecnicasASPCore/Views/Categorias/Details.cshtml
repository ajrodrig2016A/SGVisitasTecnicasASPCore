@model SGVisitasTecnicasASPCore.Models.categorias

@{
    ViewData["Title"] = "Detalles de la Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h4 class="text-center text-primary">Detalles de la Categoría</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 offset-md-3">
            <div class="table-responsive">
                <dl class="d-lg-table">
                    <dt class="col-sm-2">
                        Código
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.id_categoria)
                    </dd>
                    <dt class="col-sm-2">
                        Nombre
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.nombre)
                    </dd>
                    <dt class="col-sm-2">
                        Descripción
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.descripcion)
                    </dd>
                    <dt class="col-sm-2">
                        Estado
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.estado)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            @Html.ActionLink("Editar", "Edit", new { id = Model.id_categoria }, new { @class = "btn btn-primary" })
        </div>
        <div class="col text-center">
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        </div>
    </div>
</div>

