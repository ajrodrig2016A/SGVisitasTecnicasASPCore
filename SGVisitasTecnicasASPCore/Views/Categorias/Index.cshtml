@model IEnumerable<SGVisitasTecnicasASPCore.Models.categorias>

@{
    ViewData["Title"] = "SGVT - Gestión de Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/no-more-tables.css" rel="stylesheet" />
    <title>Gestión de Categorías</title>
</head>
<body>
    <h4 class="text-center text-primary">Gestión de Categorías</h4>
    <hr />
    <div class="container-fluid">
        <section id="no-more-tables" style="padding-top: 0;">
            <p>
                <a class="btn btn-primary" asp-action="Create">Nueva Categoría</a>
            </p>
            <table class="table-bordered table-striped table-condensed">
                <thead class="text-center">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estado)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-title="@Html.DisplayNameFor(model => model.nombre)">
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.descripcion)">
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.estado)">
                                @Html.DisplayFor(modelItem => item.estado)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.id_categoria }, new { @class = "btn btn-warning" }) |
                                @Html.ActionLink("Detalles", "Details", new { id = item.id_categoria }, new { @class = "btn btn-info" }) |
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_categoria }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>
