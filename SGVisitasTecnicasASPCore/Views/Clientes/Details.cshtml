@model SGVisitasTecnicasASPCore.Models.clientes

@{
    ViewData["Title"] = "SGVT - Detalles del Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Detalles del Cliente</title>
</head>
<body>

    <h4 class="text-center text-primary">Detalles del Cliente</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 offset-md-3">
                <div class="table-responsive">
                    <dl class="d-lg-table">
                        <dt>
                            @Html.DisplayNameFor(model => model.id_cliente)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.id_cliente)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.numero_documento)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.numero_documento)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.nombres)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.nombres)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.apellidos)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.apellidos)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.fecha_registro)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.fecha_registro)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.genero)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.genero)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.direccion)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.direccion)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.email)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.password)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.password)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.numero_contacto)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.numero_contacto)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                @Html.ActionLink("Editar", "Edit", new { id = Model.id_cliente }, new { @class = "btn btn-primary" })
            </div>
            <div class="col text-center">
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </div>
</body>
</html>
