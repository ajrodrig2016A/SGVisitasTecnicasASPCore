@model SGVisitasTecnicasASPCore.Models.cotizaciones

@{
    ViewData["Title"] = "Eliminar Cotización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="text-center bg-danger">
    <h3>Usted está seguro de borrar esta cotización?</h3>
</div>
<div>
    <h4 class="text-center text-primary">Eliminar Cotización</h4>
    <hr />
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container-fluid">
            <div class="row">
                <input type="hidden" asp-for="id_cotizacion" />

                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="nombre_cliente" class="control-label"></label>
                        <input asp-for="nombre_cliente" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="sector_inmueble" class="control-label"></label>
                        <input asp-for="sector_inmueble" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="direccion_inmueble" class="control-label"></label>
                        <input asp-for="direccion_inmueble" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="fecha_registro" class="control-label"></label>
                        <input asp-for="fecha_registro" id="datepicker" type="text" class="form-control" value="@Model.fecha_registro.ToString("yyyy-MM-dd")" readonly />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="telefono" class="control-label"></label>
                        <input asp-for="telefono" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="empleado_id" class="control-label"></label>
                        <div style="display: inherit;">
                            <select asp-for="empleado_id" asp-items="ViewBag.empleados" disabled="disabled"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="estado" class="control-label"></label>
                        <div style="display: inherit;">
                            @Html.DropDownListFor(model => model.estado, new SelectList(Enum.GetValues(typeof(SGVisitasTecnicasASPCore.Models.cotizaciones.Status))), "Seleccione un estado")
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-12">
                    <p class="text-center text-secondary">De acuerdo con la visita realizada, cotizamos los siguientes elementos y/o accesorios:</p>
                    <br />
                    <div class="table-responsive">
                        <table id="DetCtzTable" class="table table-bordered table-striped table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>
                                        Descripción
                                    </th>
                                    <th>
                                        Ubicación
                                    </th>
                                    <th>
                                        Marca
                                    </th>
                                    <th>
                                        Unidad
                                    </th>
                                    <th>
                                        Cantidad
                                    </th>
                                    <th>
                                        Valor Unitario
                                    </th>
                                    <th>
                                        Valor Total
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.DetallesCotizacion.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input asp-for="@Model.DetallesCotizacion[i].descripcion" class="form-control-plaintext" readonly />
                                        </td>
                                        <td>
                                            <input asp-for="@Model.DetallesCotizacion[i].ubicación" class="form-control-plaintext" readonly />
                                        </td>
                                        <td>
                                            <input asp-for="@Model.DetallesCotizacion[i].marca" class="form-control-plaintext" readonly />
                                        </td>
                                        <td>
                                            <input asp-for="@Model.DetallesCotizacion[i].unidad" class="form-control-plaintext" readonly />
                                        </td>
                                        <td>
                                            <input asp-for="@Model.DetallesCotizacion[i].cantidad" class="form-control-plaintext" readonly />
                                        </td>
                                        <td>
                                            <input asp-for="@Model.DetallesCotizacion[i].valorUnitario" class="form-control-plaintext" readonly />
                                        </td>
                                        <td>
                                            <input asp-for="@Model.DetallesCotizacion[i].valorTotal" class="form-control-plaintext" readonly />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="tiempo_entrega" class="control-label"></label>
                        <input asp-for="tiempo_entrega" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="instalacion" class="control-label"></label>
                        <input asp-for="instalacion" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="garantia_equipos" class="control-label"></label>
                        <input asp-for="garantia_equipos" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="forma_pago" class="control-label"></label>
                        <input asp-for="forma_pago" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="subtotal" class="control-label"></label>
                        <input asp-for="subtotal" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="validez" class="control-label"></label>
                        <input asp-for="validez" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="observaciones" class="control-label"></label>
                        <input asp-for="observaciones" class="form-control" readonly />
                    </div>
                </div>

                <div class="col-sm-12 col-md-12">
                    <div class="row">
                        <div class="col text-center">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                        <div class="col text-center">
                            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}
