@model IEnumerable<SGVisitasTecnicasASPCore.Models.empleados>

@{
    ViewData["Title"] = "Gestión de Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";

    SortModel sortModel = (SortModel)ViewData["sortModel"];

    PagerModel pager = ViewBag.Pager;
}

<hr />
<h4 class="text-center text-primary">Gestión de Empleados</h4>
<hr />
<div class="container">
    <p>
        <a class="btn btn-primary" asp-action="Create">Nuevo Empleado</a>
    </p>
    <div class="row">
        <div class="col-12">
            <partial name="_topBar" model="@pager" />
        </div>
    </div>
</div>
<section id="no-more-tables" style="padding-top: 0;">
    <table class="table-bordered table-striped table-condensed">
        <thead class="text-center">
            <tr>
                <th>
                    <i class="@sortModel.GetColumn("Número Documento").SortIcon" arial-hidden="true"></i>

                    <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("Número Documento").SortExpression">
                        Número Documento
                    </a>
                </th>
                <th>
                    <i class="@sortModel.GetColumn("Nombres").SortIcon" arial-hidden="true"></i>

                    <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("Nombres").SortExpression">
                        Nombres
                    </a>
                </th>
                <th>
                    <i class="@sortModel.GetColumn("Apellidos").SortIcon" arial-hidden="true"></i>

                    <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("Apellidos").SortExpression">
                        Apellidos
                    </a>
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.fecha_registro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.es_activo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.perfil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cargo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="@Html.DisplayNameFor(model => model.numero_documento)">
                        @Html.DisplayFor(modelItem => item.numero_documento)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.nombres)">
                        @Html.DisplayFor(modelItem => item.nombres)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.apellidos)">
                        @Html.DisplayFor(modelItem => item.apellidos)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.fecha_registro)">
                        @Html.DisplayFor(modelItem => item.fecha_registro)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.es_activo)">
                        @Html.DisplayFor(modelItem => item.es_activo)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.email)">
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.telefono)">
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.password)">
                        @Html.DisplayFor(modelItem => item.password)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.perfil)">
                        @Html.DisplayFor(modelItem => item.perfil)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.cargo)">
                        @Html.DisplayFor(modelItem => item.cargo)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.id_empleado">
                                <span class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                </span>
                            </a>

                            <a asp-action="Details" asp-route-id="@item.id_empleado">
                                <span class="btn btn-sm btn-outline-dark">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </span>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.id_empleado">
                                <span class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </span>
                            </a>

                        </div>
                        @*@Html.ActionLink("Editar", "Edit", new { id = item.id_empleado }, new { @class = "btn btn-warning" }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.id_empleado }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_empleado }, new { @class = "btn btn-danger" })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager" />
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("myModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');

        }

        $(document).ready(function () {
            var msg = "@TempData["SuccessMessage"]";
            if (msg) {
                openSuccessModal(msg);

            }

        });

    </script>
}
