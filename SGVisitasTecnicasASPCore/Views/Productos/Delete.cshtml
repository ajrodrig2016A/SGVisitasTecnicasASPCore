@model SGVisitasTecnicasASPCore.Models.productos

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="text-center bg-danger">
    <h3>Usted está seguro de borrar este producto?</h3>
</div>
<div>
    <h4 class="text-center text-primary">Eliminar Producto</h4>
    <hr />
    <form asp-action="Delete" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group" style="display:none;">
                        <label asp-for="id_producto" class="control-label">Código</label>
                        <input asp-for="id_producto" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="nombre" class="control-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="id_marca" class="control-label">Marca</label>
                        <div style="display: inherit;">
                            <select asp-for="id_marca" asp-items="ViewBag.Marcas" class="form-control" disabled="disabled"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="descripcion" class="control-label">Descripción</label>
                        <input asp-for="descripcion" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="fecha_registro" class="control-label">Fecha de Registro</label>
                        <input asp-for="fecha_registro" type="text" class="form-control" value="@Model.fecha_registro.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="fecha_actualizacion" class="control-label">Fecha de Actualización</label>
                        <input asp-for="fecha_actualizacion" type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="ImageName" class="control-label">Nombre Foto</label>
                        <input asp-for="ImageName" class="form-control" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label asp-for="id_unidad" class="control-label">Unidad</label>
                        <div style="display: inherit;">
                            <select asp-for="id_unidad" asp-items="ViewBag.Unidades" class="form-control" disabled="disabled"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="cantidad" class="control-label">Cantidad</label>
                        <input asp-for="cantidad" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="precioUnitario" class="control-label">Precio Unitario</label>
                        <input asp-for="precioUnitario" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="id_categoria" class="control-label">Categoría</label>
                        <div style="display: inherit;">
                            <select asp-for="id_categoria" asp-items="ViewBag.Categorias" class="form-control" disabled="disabled"></select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12">
                    <div class="row">
                        <div class="col text-center">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                        <div class="col text-center">
                            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
