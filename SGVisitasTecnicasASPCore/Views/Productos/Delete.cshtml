@model SGVisitasTecnicasASPCore.Models.productos

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="text-center bg-danger">
    <h3>Usted está seguro de borrar este producto?</h3>
</div>
<div>
    <h4 class="text-center text-primary">Eliminar Producto</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-4 offset-md-4">
                <dl class="d-lg-table">
                    <dt class="col-sm-2">
                        Código
                        @*@Html.DisplayNameFor(model => model.id_producto)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="id_producto" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.id_producto)*@
                    </dd>
                    <dt class="col-sm-2">
                        Nombre
                        @*@Html.DisplayNameFor(model => model.nombre)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="nombre" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.nombre)*@
                    </dd>
                    <dt class="col-sm-2">
                        Marca
                        @*@Html.DisplayNameFor(model => model.marca)*@
                    </dt>
                    <dd class="col-sm-10">
                        <select asp-for="id_marca" asp-items="ViewBag.Marcas" class="form-control" disabled="disabled"></select>
                    </dd>
                    <dt class="col-sm-2">
                        Descripción
                        @*@Html.DisplayNameFor(model => model.descripcion)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="descripcion" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.descripcion)*@
                    </dd>
                    <dt class="col-sm-2">
                        Foto
                        @*@Html.DisplayNameFor(model => model.ImageName)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="ImageName" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.ImageName)*@
                    </dd>
                    <dt class="col-sm-2">
                        Unidad
                        @*@Html.DisplayNameFor(model => model.unidad)*@
                    </dt>
                    <dd class="col-sm-10">
                        <select asp-for="id_unidad" asp-items="ViewBag.Unidades" class="form-control" disabled="disabled"></select>
                    </dd>
                    <dt class="col-sm-2">
                        Cantidad
                        @*@Html.DisplayNameFor(model => model.cantidad)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="cantidad" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.cantidad)*@
                    </dd>
                    <dt class="col-sm-2">
                        Precio Unitario
                        @*@Html.DisplayNameFor(model => model.precioUnitario)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="precioUnitario" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.precioUnitario)*@
                    </dd>
                    <dt class="col-sm-2">
                        Stock
                        @*@Html.DisplayNameFor(model => model.stock)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="stock" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.stock)*@
                    </dd>
                    <dt class="col-sm-2">
                        Descuento
                        @*@Html.DisplayNameFor(model => model.descuento)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="descuento" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.descuento)*@
                    </dd>
                    <dt class="col-sm-2">
                        Porcentaje
                        @*@Html.DisplayNameFor(model => model.porcentaje)*@
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="porcentaje" class="form-control" readonly/>
                        @*@Html.DisplayFor(model => model.porcentaje)*@
                    </dd>
                    <dt class="col-sm-2">
                        Categoría
                        @*@Html.DisplayNameFor(model => model.id_categoria)*@
                    </dt>
                    <dd class="col-sm-10">
                        <select asp-for="id_categoria" asp-items="ViewBag.Categorias" class="form-control" disabled="disabled"></select>
                        @*@Html.DisplayFor(model => model.id_categoria)*@
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <div class="row">
            <div class="col text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
            <div class="col text-center">
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}