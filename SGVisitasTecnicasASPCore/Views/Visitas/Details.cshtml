@model SGVisitasTecnicasASPCore.Models.visitas

@{
    ViewData["Title"] = "Detalles de la Visita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h4 class="text-center text-primary">Detalles de la Visita</h4>
<hr />
<form asp-action="Details">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <label asp-for="id_visita" class="control-label">Código</label>
                    <input asp-for="id_visita" class="form-control" readonly />
                    <span asp-validation-for="id_visita" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fecha_agendada" class="control-label">Fecha de Agendamiento</label>
                    <input asp-for="fecha_agendada" type="text" class="form-control" value="@Model.fecha_agendada.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="fecha_cierre" class="control-label">Fecha de Cierre</label>
                    <input asp-for="fecha_cierre" type="text" class="form-control" value="@Model.fecha_cierre.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                </div>
                <div class="form-group form-check">
                    <div class="col-12">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="esProblema" readonly /> Problema
                        </label>
                    </div>
                    <hr />
                    <div class="col-12">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="requiereInstalacion" readonly /> Instalación
                        </label>
                    </div>
                    <hr />
                    <div class="col-12">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="requiereMantenimiento" readonly /> Mantenimiento
                        </label>
                    </div>
                    <hr />
                </div>
                <div class="form-group">
                    <label asp-for="descripcion" class="control-label">Descripción</label>
                    <input asp-for="descripcion" class="form-control" readonly />
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <label asp-for="ubicacionDispSeguridad" class="control-label">Ubicación Dispositivo Seguridad</label>
                    <input asp-for="ubicacionDispSeguridad" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="tiempoEntrega" class="control-label">Tiempo de Entrega</label>
                    <input asp-for="tiempoEntrega" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="estado" class="control-label">Estado</label>
                    <div style="display: inherit;">
                        <select asp-for="estado" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(SGVisitasTecnicasASPCore.Models.visitas.Status)))" disabled="disabled"><option>----Seleccione un estado----</option></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="id_cliente" class="control-label">Cliente</label>
                    <div style="display: inherit;">
                        <select asp-for="id_cliente" class="form-control" asp-items="ViewBag.Clientes" disabled="disabled"></select>
                    </div>
                    <span asp-validation-for="id_cliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="id_empleado" class="control-label">Empleado</label>
                    <div style="display: inherit;">
                        <select asp-for="id_empleado" class="form-control" asp-items="ViewBag.Empleados" disabled="disabled"></select>
                    </div>
                    <span asp-validation-for="id_empleado" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-12 col-md-12">
                <div class="row">
                    <div class="col text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = Model.id_visita }, new { @class = "btn btn-primary" })
                    </div>
                    <div class="col text-center">
                        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}